{
  "name": "fibo.github.io",
  "version": "1.0.0",
  "description": "My digital copybook",
  "private": true,
  "scripts": {
    "_build": "npm run browserify; npm run cp; npm run readme; npm run data:repo",
    "browserify": "npm run browserify:src:blog",
    "browserify:src:blog": "browserify -e src/blog/index.js -o js/blog.js",
    "browserify:TODO": "minification transform",
    "cp": "npm run cp:metadata",
    "cp:metadata": "npm run cp:metadata:bower.json; npm run cp:metadata:package.json",
    "cp:metadata:bower.json": "cp bower.json _data/",
    "cp:metadata:package.json": "cp package.json _data/",
    "jshint": "jshint -c .jshintrc src/*.js",
    "data:repo": "for repo in algebra dflow dotsoftware flow-view games-of-life gh-clone home iper Perl-Box-pm Sweet-Home-pm Task-BeLike-FIBO-pm vvvv-ChaosToys; do npm run data:repo:$repo; done",
    "data:repo:algebra":             "wget https://api.github.com/repos/fibo/algebra             -O _data/repos/algebra.json",
    "data:repo:dflow":               "wget https://api.github.com/repos/fibo/dflow               -O _data/repos/dflow.json",
    "data:repo:dotsoftware":         "wget https://api.github.com/repos/fibo/.software           -O _data/repos/dotsoftware.json",
    "data:repo:flow-view":           "wget https://api.github.com/repos/fibo/flow-view           -O _data/repos/flow-view.json",
    "data:repo:games-of-life":       "wget https://api.github.com/repos/fibo/games-of-life       -O _data/repos/games-of-life.json",
    "data:repo:gh-clone":            "wget https://api.github.com/repos/fibo/gh-clone            -O _data/repos/gh-clone.json",
    "data:repo:home":                "wget https://api.github.com/repos/fibo/home                -O _data/repos/home.json",
    "data:repo:iper":                "wget https://api.github.com/repos/fibo/iper                -O _data/repos/iper.json",
    "data:repo:Perl-Box-pm":         "wget https://api.github.com/repos/fibo/Perl-Box-pm         -O _data/repos/Perl-Box-pm.json",
    "data:repo:Sweet-Home-pm":       "wget https://api.github.com/repos/fibo/Sweet-Home-pm       -O _data/repos/Sweet-Home-pm.json",
    "data:repo:Task-BeLike-FIBO-pm": "wget https://api.github.com/repos/fibo/Task-BeLike-FIBO-pm -O _data/repos/Task-BeLike-FIBO-pm.json",
    "data:repo:vvvv-ChaosToys":      "wget https://api.github.com/repos/fibo/vvvv-ChaosToys      -O _data/repos/vvvv-ChaosToys.json",
    "readme": "npm run readme:get; npm run readme:cat",
    "readme:get": "for repo in dotsoftware gh-clone nz-util; do npm run readme:get:$repo; done",
    "readme:get:dotsoftware": "wget https://raw.githubusercontent.com/fibo/.software/master/README.md -O _projects/_readmes/dotsoftware-readme.md",
    "readme:get:gh-clone":    "wget https://raw.githubusercontent.com/fibo/gh-clone/master/README.md  -O _projects/_readmes/gh-clone-readme.md",
    "readme:get:nz-util":     "wget https://raw.githubusercontent.com/fibo/nz-util/master/README.md   -O _projects/_readmes/nz-util-readme.md",
    "readme:get:tris3d":     "wget https://raw.githubusercontent.com/fibo/tris3d/master/README.md     -O _projects/_readmes/tris3d-readme.md",
    "readme:cat": "for repo in dotsoftware gh-clone nz-util; do npm run readme:cat:$repo; done",
    "readme:cat:dotsoftware": "cat _projects/dotsoftware/index.yaml _projects/_readmes/dotsoftware-readme.md > _projects/dotsoftware/index.md",
    "readme:cat:gh-clone":    "cat _projects/gh-clone/index.yaml    _projects/_readmes/gh-clone-readme.md    > _projects/gh-clone/index.md",
    "readme:cat:nz-util":     "cat _projects/nz-util/index.yaml     _projects/_readmes/nz-util-readme.md     > _projects/nz-util/index.md",
    "readme:cat:tris3d":      "cat _projects/tris3d/index.yaml      _projects/_readmes/tris3d-readme.md      > _projects/tris3d/index.md",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fibo/fibo.github.io.git"
  },
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": [
    {
      "type": "MIT",
      "url": "http://g14n.info/mit-license"
    }
  ],
  "bugs": {
    "url": "https://github.com/fibo/fibo.github.io/issues"
  },
  "homepage": "http://g14n.info",
  "dependencies": {
    "browserify": "^10.2.3",
    "dflow": "^0.4.0"
  }
}
