---
layout: null
---

{
 "name": "flare",
 "children": [
  {
   "name": "Latest Posts",
   "children": [
     {% for post in site.posts limit:3 %}
     {
       "name": "<textPath xlink:href='#MyTextPath'> {{ post.title }}",
       "size": 1{{ post.content | number_of_words }},
       "url": "{{ post.url }}"
     }{% if forloop.last %}{% else %},{% endif %}
     {% endfor %}
   ]
  },
  {
   "name": "Blog",
   "children": [
      {% for cluster in site.clusters %}
      {
       "name": "{{ cluster }}",
       "children": [
        {% for post in site.tags[cluster] %}
        {
          "name": "{{ post.title }}",
          "size": {{ post.content | number_of_words }},
           "url": "{{ post.url }}"
        }{% if forloop.last %}{% else %},{% endif %}
        {% endfor %}
       ]
      }{% if forloop.last %}{% else %},{% endif %}
      {% endfor %}
    ]
  }
 ]
}

